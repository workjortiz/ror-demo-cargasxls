<div id="<%= dom_id product %>">
  <p>
    <strong>Code:</strong> (<%= product.short_code %>) <%= product.long_code %>
  </p>
  <p>
    <strong>Brand:</strong>
    <%= product.brand.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>
  <p>
    <strong>Unit measure:</strong>
    <%= product.unit_measure.name %>
  </p>

</div>
