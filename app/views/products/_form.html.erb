<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :brand_id, style: "display: block"  %>
    <%= form.select :brand_id, Brand.order(:name).collect { |s| [s.name, s.id] }, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :unit_measure_id, style: "display: block"  %>
    <%= form.select :unit_measure_id, UnitMeasure.order(:name).collect { |s| [s.name, s.id] }, include_blank: true %>
  </div>
  
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
